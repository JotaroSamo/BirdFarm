@model BirdFarm.ModelsBD.User
@{ViewData["Title"] = "Registration";}
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/Auth.css" rel="stylesheet" />
    <meta charset="UTF-8">
</head>
<body class="back">
  
    
<form method="post" asp-action="RegPage" asp-controller="Auth">
        @try
        {
            if (string.IsNullOrEmpty(Model.Email) || string.IsNullOrEmpty(Model.Password))
            {
                <h2 style="color:indianred">Enter all data!</h2>
            }
        }
        catch (Exception)
        {
        
        }

    <div>
        <label>Email:</label>
        <input type="email" name="Email" maxlength="32" />
    </div>
   

    <div>
        <label>Password:</label>
        <input type="password" name="Password" maxlength="32" min="12" />
    </div>
   
    <div>
        <input type="submit" value="Regestration">
    </div>
</form>
</body>
</html>
